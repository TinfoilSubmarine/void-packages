# Template file for 'libQuotient'
pkgname=libQuotient
version=0.8.0
revision=1
build_style=cmake
configure_args="-DBUILD_SHARED_LIBS=1 -DQuotient_INSTALL_TESTS=0
 -DQuotient_ENABLE_E2EE=1"
hostmakedepends="qt5-qmake qt5-host-tools"
makedepends="qt5-devel qt5-multimedia-devel qtkeychain-qt5-devel olm-devel
 openssl-devel qt5-plugin-mysql qt5-plugin-odbc qt5-plugin-pgsql
 qt5-plugin-sqlite qt5-plugin-tds"
short_desc="Qt5 library to write cross-platform clients for Matrix"
maintainer="Orphaned <orphan@voidlinux.org>"
license="LGPL-2.1-or-later"
homepage="https://matrix.org/docs/projects/sdk/quotient"
distfiles="https://github.com/quotient-im/libQuotient/archive/${version}.tar.gz"
checksum=40d84c2a1ed8c57605836dd175aabd069aed33c77b6bd841391631607b8c3a76

libQuotient-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
